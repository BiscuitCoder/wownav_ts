    <script>
        // 替换 logo 图片
        window.addEventListener('DOMContentLoaded', function() {
            const logoImg = document.getElementById('header_logo');
            if (logoImg) {
                logoImg.src = '/logo2_w.png';
            }
        });

        // 粒子效果配置
        particlesJS('particles-js', {
            "particles": {
                "number": {
                    "value": 80,
                    "density": {
                        "enable": true,
                        "value_area": 800
                    }
                },
                "color": {
                    "value": ["#ffffff", "#e3f2fd"]
                },
                "shape": {
                    "type": "circle"
                },
                "opacity": {
                    "value": 0.4,
                    "random": true,
                    "anim": {
                        "enable": true,
                        "speed": 1,
                        "opacity_min": 0.4,
                        "sync": false
                    }
                },
                "size": {
                    "value": 10,
                    "random": true,
                    "anim": {
                        "enable": true,
                        "speed": 2,
                        "size_min": 2,
                        "sync": false
                    }
                },
                "line_linked": {
                    "enable": false
                },
                "move": {
                    "enable": true,
                    "speed": 2,
                    "direction": "none",
                    "random": true,
                    "straight": false,
                    "out_mode": "bounce",
                    "bounce": true,
                    "attract": {
                        "enable": false
                    }
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": {
                        "enable": true,
                        "mode": "repulse"
                    },
                    "onclick": {
                        "enable": true,
                        "mode": "push"
                    },
                    "resize": true
                },
                "modes": {
                    "repulse": {
                        "distance": 150,
                        "duration": 0.4
                    },
                    "push": {
                        "particles_nb": 3
                    }
                }
            },
            "retina_detect": true
        });

        let allSites = []; // 存储所有站点数据
        let allTags = new Set(); // 存储所有标签

        // 获取站点列表
        async function fetchSites() {
            try {
                const response = await fetch('/api/upload/sites');
                if (!response.ok) {
                    throw new Error('获取站点列表失败');
                }
                allSites = await response.json();
                // 按totalNavs降序排序
                allSites.sort((a, b) => (b.totalNavs || 0) - (a.totalNavs || 0));

                // 收集所有标签
                allTags.clear();
                allSites.forEach(site => {
                    if (site.tag) {
                        allTags.add(site.tag);
                    }
                });

                // 更新标签选择框
                updateTagSelect();

                displaySites(allSites);
            } catch (error) {
                console.error('获取站点列表失败:', error);
            }
        }

        // 更新标签选择框
        function updateTagSelect() {
            const tagSelect = document.getElementById('tagSelect');
            // 保留"全部分类"选项
            tagSelect.innerHTML = '<option value="">全部分类</option>';

            // 计算每个标签下的站点数量
            const tagCounts = {};
            allSites.forEach(site => {
                const tag = site.tag || '未分类';
                tagCounts[tag] = (tagCounts[tag] || 0) + 1;
            });

            // 将标签转换为数组并按数量降序排序
            const sortedTags = Object.entries(tagCounts)
                .sort(([, a], [, b]) => b - a)
                .map(([tag]) => tag);

            // 添加排序后的标签选项
            sortedTags.forEach(tag => {
                tagSelect.innerHTML += `<option value="${tag}">${tag} (${tagCounts[tag]})</option>`;
            });
        }

        // 生成首字母图标
        function generateInitialIcon(title) {
            if (!title) return '?';
            // 优先获取第一个英文字母
            const englishMatch = title.match(/[a-zA-Z]/);
            if (englishMatch) {
                return englishMatch[0].toUpperCase();
            }
            // 如果没有英文字母，获取第一个字符
            return title.charAt(0);
        }

        // 显示站点列表
        function displaySites(sites) {
            const sitesContainer = document.querySelector('.sites-container');
            const sitesGrid = document.getElementById('sitesGrid');
            const sitesHeader = document.querySelector('.sites-header');

            // 先移除已存在的暂无站点容器
            const existingNoSites = document.querySelector('.no-sites');
            if (existingNoSites) {
                existingNoSites.remove();
            }

            if (sites.length === 0) {
                sitesGrid.style.display = 'none';
                // 创建一个新的容器来放置暂无站点的内容
                const noSitesContainer = document.createElement('div');
                noSitesContainer.className = 'no-sites';
                noSitesContainer.innerHTML = `
                    <div class="no-sites-icon">🌐</div>
                    <div class="no-sites-text">暂无站点，快来创建你的第一个导航站吧！</div>
                    <a href="/manage/generate" class="no-sites-action">
                        <span>立即创建</span>
                        <span>→</span>
                    </a>
                `;
                // 将暂无站点内容插入到搜索框后面
                sitesHeader.after(noSitesContainer);
                return;
            }

            sitesGrid.style.display = 'grid';
            sitesGrid.innerHTML = sites.map(site => {
                const themeColor = site.themeColor || '#102fb9';
                const iconUrl = site.icon ? `/${site.name}/${site.icon}` : null;
                const initialIcon = generateInitialIcon(site.title);

                return `
                    <a href="/${site.name}" class="site-card" target="_blank" 
                       style="border-left: 4px solid ${themeColor};"
                       onmouseover="this.style.boxShadow='0 8px 24px ${themeColor}20'; this.querySelector('.site-title').style.color='${themeColor}';"
                       onmouseout="this.style.boxShadow='none'; this.querySelector('.site-title').style.color='var(--text-color)';">
                        <div class="site-header">
                            <div class="site-info">
                                <div class="site-title-row">
                                    <div class="site-title" title="${site.title}">${site.title}</div>
                                    <div class="site-tag" style="color: ${themeColor}; background: ${themeColor}10;">${site.totalNavs} | ${site.tag || '未分类'}</div>
                                </div>
                                <div class="site-description" title="${site.description || '暂无描述'}">${site.description || '暂无描述'}</div>
                            </div>
                        </div>
                    </a>
                `;
            }).join('');
        }

        // 防抖函数
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // 搜索功能
        const searchSites = debounce((query, selectedTag) => {
            let filteredSites = allSites;

            // 先按标签筛选
            if (selectedTag) {
                filteredSites = filteredSites.filter(site => site.tag === selectedTag);
            }

            // 再按搜索词筛选
            if (query) {
                const searchQuery = query.toLowerCase();
                filteredSites = filteredSites.filter(site =>
                    site.title.toLowerCase().includes(searchQuery) ||
                    site.name.toLowerCase().includes(searchQuery)
                );
            }

            displaySites(filteredSites);
        }, 300);

        // 页面加载时获取站点列表
        window.addEventListener('load', () => {
            fetchSites();

            // 添加搜索输入事件监听
            const searchInput = document.getElementById('searchInput');
            const tagSelect = document.getElementById('tagSelect');

            searchInput.addEventListener('input', (e) => {
                searchSites(e.target.value, tagSelect.value);
            });

            tagSelect.addEventListener('change', (e) => {
                searchSites(searchInput.value, e.target.value);
            });
        });
    </script>
